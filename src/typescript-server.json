{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "build/",
    "rootDir": "./ts"
  },
  "exclude": [
    "node_modules",
    ".npm"
  ],
  "include": [
        "ts/server/**/*",
        "ts/lib/**/*"
  ]
}