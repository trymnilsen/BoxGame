{
  "compilerOptions": {
    "target": "ES5",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "public/js/build"
  },
  "exclude": [
    "node_modules",
    ".npm"
  ],
  "include": [
        "ts/client/**/*",
        "ts/lib/**/*"
 ]
}